# Core Configuration
aws_region   = "us-west-2"
project_name = "condense"
environment  = "dev"

# Amplify CI/CD Configuration - Single Branch Setup
repository_url        = "https://github.com/YOUR_USERNAME/YOUR_REPO_NAME"
github_access_token   = "ghp_your_github_token_here"
branch_name          = "main"  # Only using main branch for simplicity
domain_name          = null    # Set to your domain if you have one

# Lambda Configuration
lambda_timeout      = 300
lambda_memory_size  = 1024

# Feature Flags
enable_custom_domain = false
enable_monitoring    = true
enable_backup        = true

# Cost Optimization
dynamodb_billing_mode = "PAY_PER_REQUEST"

# Security
allowed_origins = ["*"]  # Update with your actual domains in production
enable_waf      = false